---
import Layout from '../layouts/Layout.astro';
import { createSession, EDITOR_USER, EDITOR_PASS, ADMIN_USER, ADMIN_PASS } from '../lib/auth';

let error = '';

if (Astro.request.method === "POST") {
  try {
    const data = await Astro.request.formData();
    const username = data.get("username")?.toString();
    const password = data.get("password")?.toString();

    const isValidAdmin = username === ADMIN_USER && password === ADMIN_PASS;
    const isValidEditor = username === EDITOR_USER && password === EDITOR_PASS;

    if (isValidAdmin || isValidEditor) {
      createSession(Astro.cookies);
      return Astro.redirect("/");
    } else {
      error = "Invalid credentials";
    }
  } catch (e) {
    error = "Login failed";
  }
}
---

<Layout title="Visual Editor Login">
  <div class="min-h-screen flex items-center justify-center bg-[#0a0a0f] text-white">
    <div class="w-full max-w-md p-8 border border-white/10 bg-[#0f111a]">
      <div class="mb-8 text-center">
        <h1 class="text-2xl font-bold tracking-tighter mb-2">VISUAL EDITOR ACCESS</h1>
        <p class="text-gray-400 text-sm font-mono">Enter credentials to enable edit mode</p>
      </div>

      {error && (
        <div class="mb-6 p-3 bg-red-500/10 border border-red-500/50 text-red-500 text-sm font-mono text-center">
          {error}
        </div>
      )}

      <form method="POST" class="space-y-6">
        <div>
          <label class="block text-xs font-mono text-gray-500 uppercase tracking-widest mb-2">Username</label>
          <input 
            type="text" 
            name="username" 
            required
            class="w-full bg-black/50 border border-white/10 p-3 text-white focus:border-primary focus:outline-none transition-colors font-mono"
            placeholder="editor"
          />
        </div>

        <div>
           <label class="block text-xs font-mono text-gray-500 uppercase tracking-widest mb-2">Password</label>
           <input 
            type="password" 
            name="password" 
            required
            class="w-full bg-black/50 border border-white/10 p-3 text-white focus:border-primary focus:outline-none transition-colors font-mono"
            placeholder="••••••••"
          />
        </div>

        <button 
          type="submit"
          class="w-full bg-primary text-black font-bold uppercase tracking-widest py-4 hover:bg-white hover:text-black transition-all duration-300"
        >
          Initialize Session
        </button>
      </form>
      
      <div class="mt-6 text-center">
          <a href="/" class="text-xs font-mono text-gray-500 hover:text-white transition-colors">[ Return to Signal ]</a>
      </div>
    </div>
  </div>
</Layout>